script/source = "extends Control

export (NodePath) var item_confirmation_path
onready var currency_price_tag = $BackPanel/Background/CurrencyDescription/PriceTag/Price
onready var chip_price_tag = $BackPanel/Background/ChipDescription/PriceTag/Price
onready var chip_btn = $BackPanel/Background/ChipButton
onready var chip_level = $BackPanel/Background/ChipDescription/Level
onready var currency_btn = $BackPanel/Background/CurrencyButton
onready var currency_level = $BackPanel/Background/CurrencyDescription/Level
onready var anim = $Anim
export (Texture) var coin_texture
export (Texture) var fish_texture
export (Color) var level_max_color
onready var item_confirmation
var button_clicked_ref = null

signal on_show_confirmation_panel(item, cost)
signal update_currency
signal closed

func _ready():
	update_price_tags()
	$BackPanel.visible = false
	pass

func start():
	anim.play('Enter')
	pass

func _on_CurrencyButton_on_clicked(button_ref):
	chip_btn.unclick_button()
	on_button_clicked(button_ref, ItemManager.UpgradeType.CURRENCY)
	pass

func _on_ChipButton_on_clicked(button_ref):
	currency_btn.unclick_button()
	on_button_clicked(button_ref, ItemManager.UpgradeType.CHIP)
	pass

func on_button_clicked(button_ref, item_type):
	var item = ItemManager.get_upgrade_item_by_type(item_type)
	button_clicked_ref = button_ref
	button_clicked_ref.set_item(item)
	emit_signal(\"on_show_confirmation_panel\", item, self)
	pass

func _on_UpgradeCloseButton_button_down():
	anim.play_backwards('Enter')
	emit_signal('closed')
	pass

func change_to_buy_state():
	button_clicked_ref.upgrade_item()
	update_ui()
	pass

func update_ui():
	emit_signal(\"update_currency\")
	var currency = ItemManager.get_upgrade_item_by_type(ItemManager.UpgradeType.CURRENCY)
	var magnet = ItemManager.get_upgrade_item_by_type(ItemManager.UpgradeType.CHIP)
	currency_level.text = 'LVL. ' + (str(currency.item_level) if currency.item_level != currency.item_price_per_level.size() else \"MAX\")
	chip_level.text = 'LVL. ' + (str(magnet.item_level) if magnet.item_level != magnet.item_price_per_level.size() else \"MAX\") 
	currency_btn.unclick_button()
	chip_btn.unclick_button()
	update_price_tags()
	pass

func _on_ShopItemConfirmation_exit_viewport():
	update_ui()
	pass # Replace with function body.

func update_price_tags():
	var currency_multiplier_info : Dictionary = ItemManager.get_upgrade_item_by_type(ItemManager.UpgradeType.CURRENCY).get_next_level_info()
	var magnet_info : Dictionary = ItemManager.get_upgrade_item_by_type(ItemManager.UpgradeType.CHIP).get_next_level_info()
	if currency_multiplier_info:
		chip_price_tag.get_node('Payment').texture = get_payment_texture(currency_multiplier_info['payment'])
		currency_price_tag.text = str(currency_multiplier_info['price'])
	else:
		currency_price_tag.get_node('SoldOut').show()
		currency_price_tag.get_node('Payment').texture = null
		currency_level.self_modulate = level_max_color
	if magnet_info:
		chip_price_tag.get_node('Payment').texture = get_payment_texture(magnet_info['payment'])
		chip_price_tag.text = str(magnet_info['price'])
	else:
		chip_price_tag.get_node('Payment').texture = null
		chip_price_tag.get_node('SoldOut').show()
		chip_level.self_modulate = level_max_color
	pass

func get_payment_texture(type : int):
	match type:
		ItemManager.Payment.COIN:
			return coin_texture
		ItemManager.Payment.FISH:
			return fish_texture
	pass
"

