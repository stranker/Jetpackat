script/source = "extends Panel

signal language_selected(texture_button)
onready var initial_button_scale = Vector2(0.5,0.5)
export (Array, NodePath) var button_list

func _ready():
	randomize()
	pass

func _on_En_button_down():
	TranslationServer.set_locale('en')
	emit_signal('language_selected',$Flags/English/En.texture_normal)
	pass # Replace with function body.

func _on_Es_button_down():
	TranslationServer.set_locale('es')
	emit_signal('language_selected',$Flags/Espaniol/Es.texture_normal)
	pass # Replace with function body.

func _on_Pt_button_down():
	TranslationServer.set_locale('pt')
	emit_signal('language_selected',$Flags/Portugues/Pt.texture_normal)
	pass # Replace with function body.

func on_animation_end():
	for button in button_list:
		$Tween.interpolate_property(get_node(button),'rect_scale', initial_button_scale, Vector2(1,1), 0.3,
		 Tween.TRANS_ELASTIC,Tween.EASE_OUT, rand_range(0.05,0.25))
	$Tween.start()
	pass"

