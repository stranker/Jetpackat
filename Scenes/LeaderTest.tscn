script/source = "extends Control

export (Array, Texture) var cup_textures
export var player_color : Color

func set_info(pos:int, info:Dictionary):
	$Panel/MC/HBC/Pos/Position.text = str(pos)+'.'
	if !info.empty():
		$Panel/MC/HBC/Name/Name.text = info['name']
		if info['name'] == GameManager.nickname:
			change_to_player()
		$Panel/MC/HBC/Score/Score.text = info['score']
	if pos <= 3:
		$Panel/MC/HBC/Pos/Position/Cup.texture = cup_textures[pos-1]

func change_to_player():
	self_modulate = player_color
	pass"

