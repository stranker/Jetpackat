script/source = "extends Panel

export (PackedScene) var leaderitem_scene

signal leader_closed

func start():
	$Leaders/State.show()
	$Anim.play('Enter')
	pass

func fill_leaderboard(data):
	if data:
		$Leaders/State.hide()
		var pos = 1
		if typeof(data) == TYPE_DICTIONARY:
			var l = leaderitem_scene.instance()
			$Leaders/SC/ItemList.add_child(l)
			l.set_info(pos,data)
			pos += 1
			if is_current_player(data):
				l.change_to_player()
		if typeof(data) == TYPE_ARRAY:
			for i in data:
				var l = leaderitem_scene.instance()
				l.set_info(pos,i)
				$Leaders/SC/ItemList.add_child(l)
				if is_current_player(i):
					l.change_to_player()
				pos += 1
	else:
		leader_empty()
	pass

func is_current_player(data):
	return data['name'] == GameManager.nickname

func leader_empty():
	$Leaders/State.text = 'LEADERBOARD_EMPTY'
	pass

func failed_to_connect():
	$Leaders/State.text = 'LEADERBOARD_FAILED'
	pass

func connecting():
	$Leaders/State.text = tr('LEADERBOARD_CONNECTING')

func _on_Anim_animation_finished(anim_name):
	pass # Replace with function body.

func _on_CloseLeaderButton_button_down():
	$Anim.play_backwards('Enter')
	for leader_item in $Leaders/SC/ItemList.get_children():
		leader_item.queue_free()
	emit_signal('leader_closed')
	pass # Replace with function body.
"

