script/source = "extends Control

export (PackedScene) var packed_scene
export (bool) var vertical_layout
export (int) var columns_number = 1
export (int) var h_separation
var grid_data
export (int) var items_to_show
var total_pages : int
export var actual_page : int = 0

# Called when the node enters the scene tree for the first time.
func _ready():
	if vertical_layout:
		$VBC/HBC/PrevButton2.hide()
		$VBC/HBC/NextButton2.hide()
	else:
		$VBC/PrevButton.hide()
		$VBC/NextButton.hide()
	pass # Replace with function body.

func _process(delta):
	if columns_number != 0 and columns_number != $VBC/HBC/Grid.columns:
		$VBC/HBC/Grid.columns = columns_number

func create_shop_items(data : Dictionary):
	total_pages = ceil(float(data.size()) / float(items_to_show))
	actual_page = 0
	grid_data = data
	clear_previous_data()
	instanciate_page()
	fill_shop_item_info()
	if vertical_layout:
		$VBC/PrevButton.hide()
	else:
		$VBC/HBC/PrevButton2.hide()
	pass

func fill_shop_item_info():
	var panel_count = $VBC/HBC/Grid.get_child_count() 
	for idx in range(panel_count):
		var item_data_key = grid_data.keys()[actual_page * items_to_show + idx]
		$VBC/HBC/Grid.get_child(idx).set_item_info(item_data_key,grid_data[item_data_key])
	pass

func clear_previous_data():
	for item in $VBC/HBC/Grid.get_children():
		$VBC/HBC/Grid.remove_child(item)
		item.queue_free()
	pass

func instanciate_page():
	if actual_page != total_pages - 1:
		for i in range(items_to_show):
			var scene = packed_scene.instance()
			$VBC/HBC/Grid.add_child(scene)
	else:
		for i in range(grid_data.size() % items_to_show):
			var scene = packed_scene.instance()
			$VBC/HBC/Grid.add_child(scene)
	pass

func next_page():
	if actual_page != total_pages:
		actual_page += 1
		actual_page = clamp(actual_page, 0, total_pages)
		clear_previous_data()
		instanciate_page()
		fill_shop_item_info()
		if actual_page == total_pages - 1:
			if vertical_layout:
				$VBC/NextButton.hide()
			else:
				$VBC/HBC/NextButton2.hide()
	pass

func prev_page():
	if actual_page != 0:
		actual_page -= 1
		actual_page = clamp(actual_page, 0, total_pages)
		clear_previous_data()
		instanciate_page()
		fill_shop_item_info()
		if actual_page == 0:
			if vertical_layout:
				$VBC/PrevButton.hide()
			else:
				$VBC/HBC/PrevButton2.hide()
	pass

func _on_PrevButton_button_down():
	prev_page()
	pass # Replace with function body.

func _on_NextButton_button_down():
	next_page()
	pass # Replace with function body."

