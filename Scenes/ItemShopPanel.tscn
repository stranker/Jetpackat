script/source = "extends Panel

var id : int
var type : String
var price : int
var payment : String
var buyed : bool

func set_item_info(item_id : int,info : Array):
	id = item_id
	type = info[0]
	price = info[1]
	payment = info[2]
	buyed = info[3]
	configure_panel()
	pass

func configure_panel():
	if !buyed:
		$VBC/ItemImage.texture = load('res://Sprites/Cat/'+type+'/'+str(id)+'.png')
		$VBC/ShopButton/PriceTag.text = str(price)
		$VBC/ShopButton/PriceTag/Payment.texture = load('res://Sprites/Collectables/'+payment+'.png')
	else:
		$ShopButton.hide()
		$UseButton.show()
	pass"

