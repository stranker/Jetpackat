script/source = "extends Panel

var id : int
var item_name : String
var type : String
var price : int
var payment : String
var buyed : bool
var shop = null

signal item_buy(item_type,item_name)
signal item_equip(item_type,item_name)

func set_item_info(iname:String,info : Dictionary):
	id = int(info['id'])
	item_name = iname
	type = info['type']
	price = int(info['price'])
	payment = info['payment']
	buyed = bool(info['buyed'])
	connect('item_buy',GameManager,'buy_item')
	connect('item_equip',GameManager,'equip_item')
	configure_panel()
	pass

func configure_panel():
	var image = Image.new()
	image.load('res://Sprites/Cat/'+type+'/'+item_name+'.png')
	# If the item is an Skin i need to crop the image (spritesheet)
	if type == 'Skin':
		image.crop(36,68)
	var texture = ImageTexture.new()
	texture.create_from_image(image)
	$ItemImage.texture = texture
	if !buyed:
		$ShopButton/PriceTag.text = str(price)
		$ShopButton/PriceTag/Payment.texture = load('res://Sprites/Collectables/'+payment+'.png')
		$ShopButton.disabled = check_button_available()
	else:
		$ShopButton.hide()
		$UseButton.show()
	pass

func check_button_available():
	var currency : int = 0
	match payment:
		\"Coin\":
			currency = GameManager.coins
		\"Fish\":
			currency = GameManager.fishes
	return price > currency

func _on_ShopButton_button_down():
	match payment:
		'Coin':
			GameManager.coins -= price
		'Fish':
			GameManager.fishes -= price
	emit_signal('item_buy',type,item_name)
	$ShopButton.hide()
	$UseButton.show()
	pass # Replace with function body.


func _on_UseButton_button_down():
	emit_signal('item_equip',type,item_name)
	pass # Replace with function body.
"

