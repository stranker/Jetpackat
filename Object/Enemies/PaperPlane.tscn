script/source = "extends \"res://Object/Enemies/Enemy.gd\"

var direction : int = 1
enum FLY_TYPE {NORMAL,LOOP}
var type

onready var anim = get_node(\"Anim\")

func _ready():
	._ready()
	set_fly_type()
	if rand_range(0,1) > 0.5:
		change_direction()
	pass # Replace with function body.

func set_fly_type():
	if GameManager.player_height > 300:
		type = FLY_TYPE.LOOP
	else:
		type = FLY_TYPE.NORMAL
	play_animation()
	pass

func change_direction():
	direction = -direction
	scale.x *= -1
	if direction == -1:
		position.x = get_viewport_rect().size.x
	else:
		position.x = 0
	play_animation()
	pass

func play_animation():
	match type:
		FLY_TYPE.NORMAL:
			anim.play('Normal')
		FLY_TYPE.LOOP:
			anim.play('Loop')
	anim.playback_speed = 1.3
	pass

func _on_Anim_animation_finished(anim_name):
	change_direction()
	pass # Replace with function body.

func _on_PaperPlane_body_entered(body):
	if is_player(body) and can_attack:
		if !body.invencible:
			body.take_damage()
		else:
			can_attack = false
			move_away(body.global_position)
			anim.play(\"Hit\")
	pass # Replace with function body.

func move_away(player_pos):
	var dir = ($Sprite.global_position - player_pos).normalized()
	$Tween.interpolate_property(self, 'position', $Sprite.position, Vector2(dir.x + 50, 600),2,Tween.TRANS_LINEAR,Tween.EASE_OUT)
	$Tween.start()
	pass

func _on_PaperPlane_active(val):
	if val:
		change_direction()
		set_fly_type()
	else:
		anim.stop()
	pass # Replace with function body.
"

