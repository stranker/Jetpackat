script/source = "extends Node2D

var activated : bool = false
enum ORBIT_TYPE {BLUE, YELLOW, RED}
export (ORBIT_TYPE) var type
export var add_time : int = 0
var player_inside : bool = false

signal activated(add_time)

func _ready():
	randomize()
	get_random_color()
	change_color()
	connect('activated',get_tree().root.get_node('GameScene'),'add_game_time')
	pass

func get_random_color():
	type = ORBIT_TYPE.values()[rand_range(0,ORBIT_TYPE.values().size()-1)]
	pass

func change_color():
	match type:
		ORBIT_TYPE.BLUE:
			change_sprite_color('blue')
			add_time = 2
		ORBIT_TYPE.YELLOW:
			change_sprite_color('yellow')
			add_time = 4
		ORBIT_TYPE.RED:
			change_sprite_color('red')
			add_time = 6
	pass

func change_sprite_color(color):
	var modulate_color : Color
	match color:
		'blue':
			modulate_color = Color.blue
		'yellow':
			modulate_color = Color.yellow
		'red':
			modulate_color = Color.red
	$Back.modulate = modulate_color
	$Front.modulate = modulate_color
	pass

func desactivate():
	if !activated:
		activated = !activated
		$Anim.play('Deactivate')
		emit_signal('activated',add_time)
		$Collision/CollisionShape2D.call_deferred('disabled',true)
		$Collision/CollisionShape2D2.call_deferred('disabled',true)
	pass

func _on_EnterArea_body_entered(body):
	if body.is_in_group('Player') and !player_inside:
		player_inside = !player_inside
	pass # Replace with function body.


func _on_ExitArea_body_entered(body):
	if body.is_in_group('Player') and player_inside:
		desactivate()
	pass # Replace with function body.


func _on_EnterArea_body_exited(body):
	if body.is_in_group('Player') and player_inside:
		player_inside = !player_inside
	pass # Replace with function body.


func _on_VisibilityNotifier2D_screen_exited():
	queue_free()
	pass # Replace with function body.
"

